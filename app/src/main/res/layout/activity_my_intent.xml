<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyIntent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent参数学习"
        android:textColor="#00EE76"
        android:textAlignment="center"
        android:textSize="25dp"
        android:padding="20dp"
        />

    <Button
        android:id="@+id/button_intent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示不带参数打开Activity"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="#00000000"
        android:padding="10dp" />
<!--#00000000 透明-->
    <Button
        android:id="@+id/button_intent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐式不带参数打开Activity"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_intent3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带参数打开Activity"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="#00000000"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_intent4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带返回值打开Activity"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="下方显示返回的参数"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/show_parameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20dp" />

</LinearLayout>